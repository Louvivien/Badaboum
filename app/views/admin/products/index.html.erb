<div class="container mt-5 mb-5">
	<h3><i class="far fa-id-card mt-5 "></i> - Index des produits </h3>
  <div class="container d-flex justify-content-end my-3">
    <%= link_to "Retour à l'espace administrateur", admin_root_path, class:"btn btn-secondary btn-base-1 mb-2" %>
  </div>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col"><%= sortable "id", "ID" %></th>
      <th scope="col"><%= sortable "title", "Titre" %></th>
      <th scope="col"><%= sortable "price", "Prix" %></th>
      <th scope="col"><%= sortable "updated_at", "Date" %></th>
      <th scope="col">Catégorie</th>
      <th scope="col">Taille</th>
    </tr>
  </thead>
  <tbody>
 <% @products.each do |product| %>
    <tr>
      <td class="profile-picture", style="width:200px">
        <% if product.pictures.attached?%>
            <%= image_tag product.pictures.first.variant(resize:'300x300'), alt: 'Photo du produit' %>
        <% else %>
            <%= link_to (image_tag "shoes.jpg"), admin_product_path(product.id), class:"mt-3" %>
        <% end %>
      </td>
      <td ><%= product.id %></td>
      <td><%= product.title.present? ? product.title : "N#A" %> </td>
      <td><%= product.price.present? ? product.price : "N#A" %> €</td>
      <td><%= product.updated_at.present? ? product.updated_at.strftime("%d/%m/%y %kh") : "N#A" %></td>
      <td><%= product.category.present? ? product.category.title : "N#A" %> </td>
      <td><%= product.size.present? ? product.size.title : "N#A" %> </td>
    </tr>
<%end%>
  </tbody>
</table>
</div>
