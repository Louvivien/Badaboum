<div class="container mt-5 mb-5">
	<h3><i class="far fa-id-card mt-5 "></i> - Index des commandes </h3>
  <div class="container d-flex justify-content-end my-3">
    <%= link_to "Retour à l'espace administrateur", admin_root_path, class:"btn btn-secondary btn-base-1 mb-2" %>
  </div>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">ID</th>
      <th scope="col">Acheteur</th>
      <th scope="col">Vendeur</th>
      <th scope="col">Date de réservation</th>
      <th scope="col">Produit vendu</th>
      <th scope="col">Prix total</th>
      <th scope="col">Statut</th>
    </tr>
  </thead>
  <tbody>
 <% @orders.each do |order| %>
    <tr>
      <td class="profile-picture", style="width:200px">
        <% if order.product.pictures.attached?%>
            <%= link_to (image_tag order.product.pictures.first.variant(resize:'300x300'), alt: 'Photo du produit'), product_path(order.id) %>
        <% else %>
            <%= link_to (image_tag "shoes.jpg"), product_path(order.id), class:"mt-3" %>
        <% end %>
      </td>
      <td ><%= order.id %></td>
      <td ><%= order.user.profile.first_name%></td>
      <td ><%= order.product.seller.profile.first_name%></td>
      <td><%= order.updated_at.strftime("%d/%m/%Y à %H:%M")%></td>
      <td ><%= order.product.title %></td>
      <td ><%= order.product.price %> €</td>
      <% if order.status == "in_progress" %>
        <td ><span class="badge badge-primary"><%= order.status %></td>
      <% elsif order.status == "paid_with_stripe" %>
        <td ><span class="badge badge-success"><%= order.status %></td>
      <% elsif order.status == "completed" %>
        <td ><span class="badge badge-light"><%= order.status %></td>
      <% elsif order.status == "disputed" %>
        <td ><span class="badge badge-warning"><%= order.status %></td>
      <% elsif order.status == "refunded" %>
        <td ><span class="badge badge-danger"><%= order.status %></td>
      <% end %>
    </tr>
<%end%>
  </tbody>
</table>
</div>
