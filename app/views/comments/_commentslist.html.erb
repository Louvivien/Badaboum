
    <div class="col-lg-6">
        <div class="section-title section-title--style-1">
            <h3 class="section-title-inner heading-5 strong-600 text-uppercase">
                Commentaires
            </h3>
        </div>

        <div class="block-post-comments">

            <!-- Comment List -->

        <% @product.comments.each do |comment| %>

            <% if @product.seller.id == comment.user.id %>
                <div class="block-post-comments block-post-comments--style-1 mb-2 alert-warning">
            <% else %>
                <div class="block-post-comments block-post-comments--style-1 mb-2">
            <% end %>

                <div class="block block-comment">
                    <div class="block-image user_icon">
                        <% if comment.user.profile.profil_picture.attached? %>
                          <%= image_tag comment.user.profile.profil_picture_thumbnail, alt: 'Photo du vendeur', class:"img-circle m-2" %>
                        <% else %>
                           <%= image_tag "profile-default.png", class:"img-circle m-2 border" %>
                        <% end %>
                    </div>
                    <div class="block-body">
                        <div class="block-body-inner">
                            <h3 class="heading heading-6">
                                <% if (comment.user.profile.first_name.present? && comment.user.profile.last_name.present?) %>
                                    <%= comment.user.profile.first_name %> <%= comment.user.profile.last_name %>
                                <% else %>
                                    Utilisateur <%= comment.user.id %>
                                <% end %>
                                <% if @product.seller.id == comment.user.id %><span class="badge badge-pill badge-danger">Vendeur</span><% end %>
                            </h3>
                            <span class="comment-date">
                                <%= comment.created_at.strftime("Le %d/%m/%y Ã  %H:%M") %>
                            </span>
                            <p class="comment-text">
                                <%=comment.content%>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        <%end%>
    </div>
</div>
