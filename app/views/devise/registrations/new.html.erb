<div class = "bg-sign">
    <div class= "container">
        <div class="row d-flex justify-content-center align-items-center", style = "height: 800px">
            <div class="col-4", style = "min-width: 300px">
                <div class= "form-control border">
                    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin p-2" } do |f| %>
                        <h1 class="h3 mb-3 font-weight-normal text-center text-primary">S'inscrire</h1>
                        <%= devise_error_messages! %>
                        <div class="form-group">
                            <%= f.label :email, "Email", class: "text-primary" %>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :mot_de_passe, class: "text-primary" %>
                            <% if @minimum_password_length %>
                                <em class= "text-primary small">(<%= @minimum_password_length %> caract√®res minimum)</em>
                            <% end %>
                            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :mot_de_passe_confirmation, class: "text-primary" %>
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>
                        <div class="actions mt-5">
                            <%= f.submit "S'inscrire", class: "btn btn-lg btn-primary btn-block" %>
                        </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>