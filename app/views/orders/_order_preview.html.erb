<div role="tabpanel" class="tab-pane active" id="tabThree-1">
    <div class="tab-body">

        <h3 class="heading heading-3 strong-400 mb-4">Mon panier</h3>

        <form class="form-default" data-toggle="validator" role="form">
            <div class="card">
                <div class="card-body">
                    <table class="table-cart">
                        <thead>
                            <tr>
                                <th class="product-image"></th>
                                <th class="product-name">Produit</th>
                                <th class="product-size d-none d-lg-table-cell">Taille</th>
                           	 	<th class="product-size d-none d-lg-table-cell">Couleur</th>
                             	<th class="product-size d-none d-lg-table-cell">Marque</th>
                                <th class="product-total">Prix</th>
                                <th class="product-remove"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="cart-item">
                                <td class="product-image">
                                    <% if @product.pictures.attached? %>
    								    <%= link_to (image_tag @product.pictures.first.variant(resize:'100x100'), alt:product.title), product_path(@product.id) %>
    								<% else %>
    								    <%= link_to (image_tag "shoes.jpg", alt:@product.title), product_path(@product.id) %>
    								<% end %>
                                </td>

                                <td class="product-name">
                                   <%= @product.title%>
                                </td>

                                <td class="product-size product-size d-none d-lg-table-cell">
                                    <span class="strong-600"><%= @product.size_id.present? ? @product.size_id : " " %></span>
                                </td>
                                <td class="product-size product-size d-none d-lg-table-cell">
                                    <span class="strong-600"><%= @product.color.present? ? @product.color : " " %></span>
                                </td>
                                <td class="product-size product-size d-none d-lg-table-cell">
                                    <span class="strong-600"><%= @product.brand.present? ? @product.brand : " " %></span>
                                </td>
                                <td class="product-total">
                                    <span>  <%=@product.price%> â‚¬</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
