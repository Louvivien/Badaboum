<div class="container">
  <div class="col-lg-12 p-5">
    <div class="container-fluid">
        <div class="tabs tabs--style-2">
            <ul class="nav nav-tabs justify-content-center">
                <li class="nav-item">
                    <a href="#tab_default_1" data-toggle="tab" class="nav-link active text-uppercase strong-1000">Mes commandes</a>
                </li>
                <li class="nav-item">
                    <a href="#tab_default_2" data-toggle="tab" class="nav-link text-uppercase strong-1000">Mes ventes</a>
                </li>
            </ul>

            <div class="tab-content pt-0">
              <div class="tab-pane active" id="tab_default_1">
                <br>
                <%= render 'three_steps_buyer' %>
                <% if user_has_bought? %>

                <%= render 'orders/buyer/my_reservations' %>
                <%= render 'orders/buyer/my_cancellations' %>
                <%= render 'orders/buyer/my_past_orders' %>
                <%end%>
              </div>

              <div class="tab-pane inactive" id="tab_default_2">
                 <br>
                <%= render 'three_steps_seller' %>
                <% if user_has_sold? %>
                <%= render 'orders/seller/my_reservations' %>
                <%= render 'orders/seller/my_cancellations' %>
                <%= render 'orders/seller/my_past_orders' %>
                <%end%>
              </div>
            </div>
        </div>
    </div>
  </div>


</div>
