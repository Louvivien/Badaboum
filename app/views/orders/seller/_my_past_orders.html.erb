
<br>
	<h3 class="heading heading-6 strong-600 text-uppercase mb-0"> Mes ventes passées</h3>
	
	<div class="row mb-3 mt-3">
		<div class="card col-12 ">
      <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Photo</th>
                  <th>Produit</th>
                  <th>Date d'achat</th>
                  <th>Acheteur</th>
                  <th>Statut</th>
                  <th>Montant</th>
                </tr>
              </thead>
              <tbody>
              	<% @seller_confirmations.each do |confirmation| %>
                <tr>
                  <td><a class="navi-link" data-toggle="modal"><%=confirmation.id%></a></td>
                  <td class="product-image">  <% if confirmation.product.pictures.attached? %>
        								<%= image_tag confirmation.product.pictures.first.variant(resize:'100x100'), alt:confirmation.product.title %>
        								<% else %>
        								<%= image_tag("shoes.jpg", alt:confirmation.product.title,size: "50") %>
        								<% end %></td>
                  <td><%=confirmation.product.title%></td>
                  <td><%=confirmation.updated_at.strftime("%Y-%m-%d")%></td>
                  <td><%=confirmation.user.profile.first_name%>
                   
                  </td>
                    <td><span class="badge badge-success m-0">Commande réceptionnée</span></td>
                  <td><%=confirmation.product.price%> €</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>	
	</div>