

      <div class="profile-picture profile-picture--style-2">
        <% if @profile.profil_picture.attached?%>
            <%= image_tag @profile.profil_picture_thumbnail, alt: 'profil_picture' %>
        <% else %>
            <%= image_tag "profile-default.png" %>
        <% end %>
      </div>

<!-- User basics-->

    <%= render 'profiles/profilebasics' %>


<!-- User information-->


    <%= render 'profiles/profileinformation' %>


<!-- User button-->   ​
    <div class="block-body text-center">
        <a href="#" class="btn btn-primary btn-shadow btn-circle">Voir mes messages</a>
        <%= link_to "Editer mes informations", edit_profile_path, class: "btn btn-secondary mt-2 btn-shadow btn-circle" %>
    </div>

<!-- User statistics-->   ​
​
	<div class="profile-stats clearfix">
            <div class="stats-entry">
                  <span class="stats-count"><%= @profile.user.uploaded_products.where("status = 1").count%></span>
                  <span class="stats-label text-uppercase">objets en vente</span>
            </div>

            <div class="stats-entry">
                <span class="stats-count"><%= @profile.user.uploaded_products.where("status = 2").count%></span>
                <span class="stats-label text-uppercase">objets vendus</span>
            </div>
    </div>

