<div class="tab-pane active" id="tab_default_1">

        <div class="my-3">

          <h3>Mes articles en vente</h3>

        </div>


        <div class="row">
        <% unless @products.nil? %>
          <% @products.each do |product| %>

            <div class="col-md-4 mt-3">

              <div class="block product no-border z-depth-2--hover">

                <div class="block-image"> 

                    <% if product.pictures.attached? %>
                          <%= link_to (image_tag product.pictures.first, alt: 'Photo du produit'), product_path(product.id) %>
                    <% else %>
                          <%= link_to (image_tag("shoes.jpg")), product_path(product.id) %>
                    <% end %>

                </div>

                <div class="block-body px-0 text-center">

                  <h3 class="heading heading-6 strong-500 text-capitalize">

                    <%= product.title %>

                  </h3>
                    <div class="col-4">
                        <div class="card-icon-actions text-right">
                            <a href="#" class="favorite active" data-toggle="tooltip" data-original-title="Save to favorites"><i class="fas fa-star"></i></a>
                        </div>
                    </div>

                  <div class="price-wrapper">

                    <span class="price heading-6 c-gray-light strong-400"><span class="price-value"><%= product.price %></span> â‚¬</span>

                    <p class=""> 11 Vues </p>

                    <p class=""> 10 Baby-list</p>

                  </div>

                </div>

                <div class="card-footer text-center"> 

                <%= link_to "Editer le produit", edit_product_path(product.id), class: "btn btn-secondary mt-2"%>

                <%= link_to "Supprimer le produit",product_path(product.id), class: "btn btn-danger mt-2", data: {:confirm => 'Souhaitez vous vraiment supprimer cet article ?'}, method: "delete" %>

                </div>
              </div>

            </div>
         <% end %>
        <% end %>

      </div>
</div>
