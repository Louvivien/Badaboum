<!-- page show.html.erb - tabs -->
<div class="tab-pane active" id="tab_default_1">
    <div class=" py-2">

        <div class="row">
            <div class="col-md-5">

                <div class="block block--style-3 mx-5">
                    <div class="profile-picture profile-picture--style-2">

                        <% if @product.seller.profile.profil_picture.attached? %>
                          <%= image_tag @product.seller.profile.profil_picture, alt: 'Photo du vendeur' %>
                        <% else %>
                           <%= image_tag("profile-default.png") %>
                        <% end %>
                    </div>

                    <div class="block-body text-center">
                        <h2 class="heading heading-4 strong-500 profile-name">
                            <%= @seller_profile.first_name.present? ? @seller_profile.first_name : " " %>
                            <%= @seller_profile.last_name.present? ? @seller_profile.last_name : " " %>
                        </h2>
                        <span class="star-rating star-rating-sm">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>
                        </span>
                           <p class="heading heading-6 strong-400  profile-occupation mt-3"><%= @seller_profile.description.present? ? @seller_profile.description : "Description non renseignée" %></p>

                        <a href="#" class="btn btn-base-1 btn-shadow btn-circle px-4 mt-2">Envoyer un message</a>
                    </div>
                    <!-- Profile stats -->
                    <div class="profile-stats clearfix">
                        <div class="stats-entry">
                            <span class="stats-count">5</span>
                            <span class="stats-label text-uppercase">objets en vente</span>
                        </div>
                        <div class="stats-entry">
                            <span class="stats-count">10</span>
                            <span class="stats-label text-uppercase">objets vendus</span>
                        </div>
                    </div>
                </div>

            </div> <!-- col -->

            <div class="col-md-7">

                <div class="text-center my-3">
                    <h3>Ses produits</h3>
                </div>
                <div class="row">

                    <div class="col-md-4">
                        <div class="block product no-border z-depth-2--hover rounded">
                            <div class="block-image">
                                <div class="view view-first">
                                    <a href="#"><%= link_to (image_tag("shoes.jpg")), root_path %></a>
                                    <!-- produit déjà dans le panier -->
                                    <a href="#" class="badge-corner"><span class="fa fa-heart"></span></a>
                                </div>
                            </div>
                            <div class="block-body px-0 text-center">
                                <h3 class="heading heading-6 strong-500 text-capitalize">
                                    <a href="#">Super chaussures</a>
                                </h3>
                                <div class="price-wrapper">
                                    <span class="price heading-6 c-gray-light strong-400"><span class="price-value">500</span> €</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="block product no-border z-depth-2--hover">
                            <div class="block-image">
                                <a href="#"><%= link_to (image_tag("shoes.jpg")), root_path %></a>
                            </div>
                            <div class="block-body px-0 text-center">
                                <h3 class="heading heading-6 strong-500 text-capitalize">
                                    <a href="#">Super chaussures</a>
                                </h3>
                                <div class="price-wrapper">
                                    <span class="price heading-6 c-gray-light strong-400"><span class="price-value">500</span> €</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="block product no-border z-depth-2--hover">
                            <div class="block-image">
                                <a href="#"><%= link_to (image_tag("shoes.jpg")), root_path %></a>
                            </div>
                            <div class="block-body px-0 text-center">
                                <h3 class="heading heading-6 strong-500 text-capitalize">
                                    <a href="#">Super chaussures</a>
                                </h3>
                                <div class="price-wrapper">
                                    <span class="price heading-6 c-gray-light strong-400"><span class="price-value">500</span> €</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </div> <!-- row -->

    </div>
</div>
