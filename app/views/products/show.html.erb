
<!-- SHOP GRID WRAPPER -->
<section class="slice sct-color-2">

    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <%= render 'product_images' %>
            </div>
            <div class="col-lg-7">
                <%= render 'product_description' %>
                <br>
                <%= render 'product_map' %>
            </div>
        </div>
    </div> 

    <!-- container -->
    <span class="space-xs-lg"></span>

    <!-- Tabs - Product description -->
    <div>
        <div class="container-fluid">
            <div class="tabs tabs--style-2">
                <ul class="nav nav-tabs justify-content-center">
                    <li class="nav-item">
                        <a href="#tab_default_1" data-toggle="tab" class="nav-link active text-uppercase strong-600">Le vendeur</a>
                    </li>
                    <li class="nav-item">
                        <a href="#tab_default_2" data-toggle="tab" class="nav-link text-uppercase strong-600">Commentaires</a>
                    </li>
                </ul>
                <div class="tab-content pt-0">
                    <%= render 'seller' %>
                    <%= render 'comments' %>
                </div>
            </div>
        </div>
    </div>

</section>

<script>

    let seller = $('#tab_default_1')
    let sellerlink = $("a[href$='default_1']")
    let comment = $('#tab_default_2')
    let commentlink = $("a[href$='default_2']")


    $(document).ready(function () {
    if(window.location.href.indexOf("?table=2") > -1) {
        seller.removeClass( "active show" )
        sellerlink.removeClass( "active show" )

        comment.addClass( "active show" )
        commentlink.addClass( "active show" )
    }
});
</script>

