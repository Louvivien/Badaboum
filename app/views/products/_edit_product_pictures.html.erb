<div class="container-fluid border-left pl-5"> 
<h5 class="text-primary">Vos images</h5>
<h6 class="text-secondary">Ajouter une / des nouvelle(s) images</h6>
    <%= form_tag product_pictures_path(@product.id), multipart: true, remote: true, authenticity_token: true do %>
        <%= file_field_tag 'pictures[]', :multiple => true,  class: "form-control mb-3"%>
        <%= submit_tag "Ajouter" %>
    <% end %>
<h6 class="text-secondary">Supprimer une / des image(s)</h6>
    <div id= 'picture_list'>
        <%= render partial:"picture_list", locals: {product: @product}%>
    </div>
</div>  