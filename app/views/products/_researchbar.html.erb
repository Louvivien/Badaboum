

<% if @current_category.nil? %>
    <h2 class="police_logo strong-600 text-uppercase text-center mb-0 mb-5"> Tous les produits </h2>
        <div class="dropdown d-flex justify-content-center">
            <button class="btn btn-styled btn-base-1 btn-circle dropdown-toggle z-depth-2-top" type="button" id="projectFiltersButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           Rechercher par Cat√©gorie
            </button>
            <div class="dropdown-menu" aria-labelledby="projectFiltersButton" x-placement="bottom-start" style="position: absolute; transform: translate3d(385px, 47px, 0px); top: 0px; left: 0px; will-change: transform;">
                <% categories.each do |category| %>
                    <%= link_to "#{category.title}", products_path(category: category.id), class: "list-group-item list-group-item-action d-flex align-items-center"%>
                <%end%>
            </div>
       </div>
<% else %>

    <h2 class="police_logo strong-600 text-uppercase text-center mb-0 mb-5"><%= @category.title %></h2>

    <div class="container mt-5">
        <div class="feature feature--boxed-border feature--bg-1">
            <h3 class="heading heading-6 strong-600 text-uppercase mb-0 mb-5"> Que recherchez-vous ?</h3>

            <%= form_tag url_for(action: 'index'), method: "get" do %>
                <div class="row cols-md-space cols-sm-space cols-xs-space">
                    <%= render 'researchbar_cat' %>                    
                    <%= render 'researchbar_price' %>                 
                    <%= render 'researchbar_brand' unless @current_category == '5'%>
                    <%= render 'researchbar_size' unless @current_category == '2' || @current_category == '3'%>
                    <div class="col-lg-3">
                        <%= submit_tag "Rechercher", class: "btn btn-warning btn-styled btn-block btn-base-1" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
<% end %>
