
<div id="mapid"></div>



<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
crossorigin=""></script>


<script>

var latitude = '<%=@product.seller.profile.latitude%>'
console.log(latitude)
var longitude = '<%= @product.seller.profile.longitude %>'
console.log(longitude)

var mymap = L.map('mapid').setView([latitude, longitude], 13);

L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(mymap);

//var marker = L.marker([51.5, -0.09]).addTo(mymap);

var LogoIcon = L.Icon.extend({
    options: {
       iconSize:     [100, 120],
       iconAnchor:   [22, 94],
       popupAnchor:  [-3, -76]
    }
});

var badaboumIcon = new LogoIcon({
    iconUrl: '<%= image_url("logo-elephant.png")%>',
})

L.marker([latitude, longitude], {icon: badaboumIcon}).addTo(mymap); 

</script>
